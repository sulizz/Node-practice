<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <script>
            function showHome(){
                window.location.href = "http://localhost:3000/";
            }
        </script>
    </head>
    <body>
        <h2>Order Details</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Address</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">Items</th>
                    <th scope="col">Status</th>
                </tr>
        </thead>
            <% let now = new Date()%>
            <% let status = '' %>
            <% for (var i=0; i<data.length; i++) { %>
    
                <tr>
                    <td><%= data[i].name %></td>
                    <td><%= data[i].email %></td>
                    <td><%= data[i].address.street %></td>
                    <td><%= data[i].address.city %></td>
                    <td><%= data[i].address.state %></td>
                    <td><%= data[i].address.zipcode %></td>
                    <td><% for (var j = 0; j<data[i].items.length;j++ ) {%>
                        <%= data[i].items[j] %>,
                        <%} %></td>
                    <% if (now.getDate() === data[i].date.getDate()) {%>
                        <%status = 'In Progress' %>
                    <%}%>
                    <% if ((now.getDate() -data[i].date.getDate() == 1)) {%>
                        <%status = 'Dispatched' %>
                    <%}%>
                    <% if  ((now.getDate() - data[i].date.getDate()) > 2) {%>
                        <%status = 'Delivered' %>
                    <%}%>
                    <td><%= status %></td>
                </tr>
            <% } %>
        </table>
        <button onClick = "showHome()">Order More</button>
    </body>
</html>
